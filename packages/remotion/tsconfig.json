{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"jsx": "react",
		"outDir": "dist",
		"rootDir": "src",
		"downlevelIteration": true,
		"paths": {
			"@/animations/*": ["./animations/*"],
			"@/compositions/*": ["./compositions/*"],
			"@/interpolations/*": ["./interpolations/*"],
			"@/components/*": ["./components/*"],
			"@/constants/*": ["./constants/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
